<%# content_for :title, "#{@customer.first_name}'s Order History" %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th># of Products</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.date_created.strftime('%d/%m/%y %R') %></td>
      <td><%= order.product_count %></td>
      <td><%= order.total_inc_tax %></td>
    </tr>
  <% end %>
    <tr>
      <td colspan="2">Lifetime Value</td>
      <td><%= @lifetime_value %></td>
    </tr>
  </tbody>
</table>
